<nav class="nav-menu text-center mt-4">
    <ul class="list-unstyled d-flex justify-content-center gap-3">
        <li><a href="/eventlist" class="btn btn-outline-primary">Event List</a></li>
        <li><a href="/eventdetails" class="btn btn-outline-primary">Event Details</a></li>
        <li><a href="/register" class="btn btn-primary">Register</a></li>
    </ul>
</nav>
